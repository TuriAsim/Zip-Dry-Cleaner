<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/toolbar"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AlertComments">

        <include
            android:id="@+id/login_toolbar"
            layout="@layout/toolbar_layout"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"

            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/zipslogo"

                />


        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:background="#81D4FA">

            <TextView
                android:background="#81D4FA"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:text="Customer Profile"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:weightSum="2"
            android:layout_gravity="center"
            android:background="@drawable/spinnerback"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:text="Last Name:"
                android:gravity="center"
                android:textColor="#3d82c4"
                android:layout_gravity="center"
                android:textStyle="bold"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text=""
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:id="@+id/lastname"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:weightSum="2"
            android:background="@drawable/spinnerback"
            android:orientation="horizontal"
            >
            <TextView
                android:textColor="#3d82c4"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:text="First Name:"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text=""
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/firstname"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:weightSum="2"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/spinnerback"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:textColor="#3d82c4"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Email:"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text=""
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:id="@+id/email"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/spinnerback"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:textColor="#3d82c4"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Phone Number:"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text=""
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/hphone"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:weightSum="2"
            android:layout_marginTop="10dp"
           android:layout_gravity="center"
            android:background="@drawable/spinnerback"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:textColor="#3d82c4"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Address:"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text=""
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/address"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:weightSum="2"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/spinnerback"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#3d82c4"
                android:text="ZIPS:"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text=""
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#000"
                android:gravity="center"
                android:id="@+id/zips"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/spinnerback"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:textColor="#3d82c4"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Prepaid Bill:"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text=""
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:id="@+id/prepaidbil"
                />

        </LinearLayout>




    </LinearLayout>
</ScrollView>