<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/toolbar"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                android:id="@+id/login_toolbar"
                layout="@layout/toolbar_layout"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"

            >

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@mipmap/zipslogo"

                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="#81D4FA">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="CHANGE YOUR PASSWORD HERE"
                />
        </LinearLayout>





        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            >

            <EditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:id="@+id/oldpass"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#000"
                android:textSize="20sp"
                android:background="@drawable/spinnerback"
                android:hint="Enter New Password"
                />


            <EditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:id="@+id/newpass"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#000"
                android:textSize="20sp"
                android:background="@drawable/spinnerback"
                android:hint="Enter New Password"
                />

            <EditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:id="@+id/confirmpass"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinnerback"
                android:hint="Enter Confirm Password"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_below="@+id/usrname"
                android:layout_alignLeft="@+id/usrname"
                android:layout_alignStart="@+id/usrname" />




        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <Button
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:id="@+id/savepass"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="SAVE PASSWORD"
                android:layout_below="@+id/login"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                />

        </LinearLayout>
        <!--
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                        android:text="Log In"
            android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginRight="5dp"
                    android:text="Not Registered?"/>

                <TextView
                    android:id="@+id/register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#00F"
                    android:text="Registered Now"/>

            </LinearLayout>
        -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="By entering you agree to our Terms and Privacy Policy"/>

        </LinearLayout>




    </LinearLayout>
</ScrollView>